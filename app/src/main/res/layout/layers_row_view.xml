<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:orientation="horizontal"
    android:padding="10dp">
    <ImageView
        android:id="@+id/layer_sorting"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/vflip"
        />
    <FrameLayout
        android:id="@+id/layers_frame"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true">

        <CheckBox
            android:id="@+id/layersview_checkBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/check_box_layers"
            android:button="@null"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <ImageView
            android:id="@+id/layersview_image"
            android:layout_width="58dp"
            android:layout_marginLeft="4dp"
            android:layout_height="58dp"

            android:scaleType="centerInside"

            android:layout_gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/layers_frame"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/layer_visibility"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/eye" />

        <ImageView
            android:id="@+id/layer_delete"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/cancel" />

    </LinearLayout>



</LinearLayout>